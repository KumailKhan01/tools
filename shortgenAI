    <script>
        // Mobile Menu Toggle
        document.getElementById('mobileMenuBtn').addEventListener('click', function() {
            document.getElementById('navLinks').classList.toggle('active');
        });

        // Theme Selection
        const themeOptions = document.querySelectorAll('.theme-option');
        themeOptions.forEach(option => {
            option.addEventListener('click', function() {
                themeOptions.forEach(opt => opt.classList.remove('active'));
                this.classList.add('active');
                
                // Update UI based on selected theme
                const selectedTheme = this.getAttribute('data-theme');
                console.log('Selected theme:', selectedTheme);
                // Here you would typically adjust the generation parameters based on theme
            });
        });

        // Generate Video Button
        document.getElementById('generateBtn').addEventListener('click', function() {
            const contentInput = document.getElementById('content-input').value;
            const voiceStyle = document.getElementById('voice-style').value;
            const videoLength = document.getElementById('video-length').value;
            const platform = document.getElementById('platform').value;
            const language = document.getElementById('language').value;
            const activeTheme = document.querySelector('.theme-option.active').getAttribute('data-theme');
            
            if (!contentInput.trim()) {
                alert('Please enter some content to generate a video.');
                return;
            }
            
            // Show loading state
            const btn = this;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating...';
            btn.disabled = true;
            
            // Simulate API call with timeout
            setTimeout(function() {
                // In a real implementation, this would call your backend API
                // which would use DeepSeek and other services to generate the video
                
                // For demo purposes, we'll just show a sample result
                document.getElementById('resultSection').style.display = 'block';
                
                // Reset button
                btn.innerHTML = '<i class="fas fa-magic"></i> Generate Video';
                btn.disabled = false;
                
                // Scroll to results
                document.getElementById('resultSection').scrollIntoView({ behavior: 'smooth' });
                
                // Set a sample video (in real implementation, this would be the generated video)
                document.getElementById('generatedVideo').src = "https://sample-videos.com/video123/mp4/720/sample_video_720p_1mb.mp4";
            }, 3000);
        });

        // Download Button
        document.getElementById('downloadBtn').addEventListener('click', function() {
            // In a real implementation, this would download the generated video
            alert('In a real implementation, this would download the generated video file.');
        });

        // SEO: Track video generation as a conversion
